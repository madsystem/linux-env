#[ ! -s ~/.config/mpd/pid ] && mpd

#cd to current ranger directory
function ranger-cd {
    tempfile="$(mktemp -t tmp.XXXXXX)"
    /usr/bin/ranger --choosedir="$tempfile" "${@:-$(pwd)}"
    test -f "$tempfile" &&
        if [ "$(cat -- "$tempfile")" != "$(echo -n `pwd`)" ]; then
            cd -- "$(cat "$tempfile")"
        fi
        rm -f -- "$tempfile"
    }


#aliases to mounts
alias repos-ext4='cd /mnt/repos-ext4/'
alias repos-ntfs='cd /mnt/repos-ntfs/'
alias data='cd /mnt/data/'
alias appdata='cd /mnt/appdata'
alias bigdata='cd /mnt/bigdata'

#aliases to pastebin
alias pastebin='curl -F c=@- https://ptpb.pw' 

#remove dir alias
alias rd='rm -rd'

